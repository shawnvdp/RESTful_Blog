        <div class="field">
            <label for="">Title</label>
            <input type="text" name="blog[title]" placeholder="title">
        </div>
        <div class="field">
            <label for="">Image</label>
            <input type="text" name="blog[image]" placeholder="image url">
        </div>
        <div class="field">
            <label for="">Blog Content</label>
            <textarea name="blog[body]"></textarea>
        </div>
        <div class="field">
            <a class="ui black big basic button" href="/blogs">Back</a>
            <button class="ui purple big basic button" type="submit">Submit</button>
        </div>
    </form>
</div>


