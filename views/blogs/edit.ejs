<% include ../partials/header.ejs %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST"> <!-- Method_Override -->
        <div class="field">
            <label for="">Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label for="">Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label for="">Blog Content</label>
            <textarea name="blog[body]"><%= blog.body %></textarea>
        </div>
        <div class="field">
            <a class="ui black big basic button" href="/blogs/<%= blog._id %>">Back</a>
            <button class="ui purple big basic button" type="submit">Submit</button>
        </div>
    </form>
</div>


<% include ../partials/footer.ejs %>